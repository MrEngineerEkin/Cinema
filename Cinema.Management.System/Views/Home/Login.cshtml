@model Cinema.Management.System.Models.Customer

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Sign in! - HBE CINEMA HALL </title>
	<link rel="stylesheet" href="~/css/login.css">
</head>

<body>
	<h2>HBE CINEMA HALL</h2>
	<div class="container" id="container">

		<div class="form-container sign-in-container">
			<form method="POST" action="/Home/Login">
				<h1>Sign in</h1>
				<input name="Email" action="/Home/Login" type="email" placeholder="Email" required />
				<input name="Password" action="/Home/Login" type="password" placeholder="Password" required />
				@if (@TempData["LoginError"] != null)
				{
					<span style="color: red; border: 2px solid red; padding:5px ; margin-bottom:5px; border-radius :3px;">
						<strong>@TempData["LoginError"]</strong></span>

				}
				<button type="submit">Sign In</button>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-right">
					<h1>HBE CINEMA HALL</h1>
					<p>Enter your personal details and start journey with us</p>
					<a asp-controller="Home" asp-action="Register">
						<button style="background-color: orange;">Sign Up</button>
					</a>
				</div>
			</div>
		</div>
	</div>



</body>

</html>