@model List<Cinema.Management.System.ViewModels.sessionSelectViewModel>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Ticket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
    @await Html.PartialAsync("_navbar")

    <div id="booking-page" class="container mt-5">
        

        <!-- Sinema Salonu Seç-->
        <div class="form-group mt-5">
            <form action="/TicketPage/ChooseSession">
                <label for="ChooseSession" class="fw-bold">Choose a cinema hall and session!</label>
                <select name="sessionId" class="form-select" id="sessionId"  required>
                
                <option selected>Choose a cinema hall and session!</option>
                @foreach (var item in Model)
                {
                    <option value="@item.session.sessionId"> @item.cinemaHall.cinemaHallName @item.session.sessionTime </option>
                }
                
                </select>

                 <button class="btn btn-primary btn-sm mr-2 mt-5" type="submit">Choose Session</button>
                        

                 
            </form>
        </div>

        <br>

       

        

    </div>

    <!-- ÖDEME EKRANINA YÖNLENDİR ?? -->

    @await Html.PartialAsync("_footer")


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>