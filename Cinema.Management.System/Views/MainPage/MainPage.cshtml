@model Cinema.Management.System.ViewModels.MovieIsShowingViewModel

<!DOCTYPE html>
<html lang="en">

<!--HALO DENEME -->
<!--EKİN DENEME -->

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <style>
        #background {
            background-image: url(https://www.arttablo.com/upload/U-sinema-salonu-fotograf-kanvas-tablo1461331435-800.jpg);
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>

<body>
    @await Html.PartialAsync("_navbar")

    <!-- PROMOTION AND A FEW FILMS -->
    <section class="promo">
        <div id="slider-promo" class="carousel slide carousel-fade my-3" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#slider-promo" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#slider-promo" data-bs-slide-to="1" aria-label="Slide 2"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 img-fluid" src="~/img/promo1.png" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Promotion</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" src="~/img/promo2.png" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Promotion</h5>
                    </div>
                </div>
        
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#slider-promo" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#slider-promo" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    </section>
    <!-- PROMOTION AND A FEW FILMS -->

    <br>
    <hr style="border-top: 5px solid red;">
    <br>


    <div class="container text-center p-5" id="background">
        <div style="color: white;">
            <h2>HBE CINEMA HALL</h2>
            <br>
            <p>
                HBE cinema hall offers you the fastest and easiest way to have fun!
                <br> <br>
                --- Join this fascinating world now ! ---
                <br><br>
                ❄ Choose a movie among the hundreds of movies ❄
            </p>
        </div>

    </div>

    <br>
    <hr style="border-top: 5px solid red;">
    <br>

    <!-- ON SHOWING FILMS -->
    <section class="onShowing">
        <div class="container">
            <div class="row">
                <h2>On Showing</h2>
            </div>
        </div>

        <div class="container">


         <div id="slider-onShowing" class="carousel slide carousel-fade my-3" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @for (int i = 0; i < @Model.isShowingMovies.Count; i++)
                {
                    @if (i == 0)
                    {
                        <button type="button" data-bs-target="#slider-onShowing" data-bs-slide-to="@i" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                    }
                    else
                    {
                        <button type="button" data-bs-target="#slider-onShowing" data-bs-slide-to="@i"
                    aria-label="Slide 2"></button>
                    }

                }

                
            </div> 
            <div class="carousel-inner">

                @for (int i = 0; i < @Model.isShowingMovies.Count; i++)
                {
                    @if (i == 0)
                    {
                        <div class="carousel-item active">
                            <a asp asp-controller="MainPage" asp-action="MoviePage" asp-route-id="@Model.isShowingMovies[i].movieId">
                                <img class="d-block  w-100 img-fluid" src="@Model.isShowingMovies[i].moviePosterUrl" alt=""></a>
                        

                            
                            
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <a asp asp-controller="MainPage" asp-action="MoviePage" asp-route-id="@Model.isShowingMovies[i].movieId">
                                <img class="d-block  w-100 img-fluid" src="@Model.isShowingMovies[i].moviePosterUrl" alt=""></a>
                            
                        </div>
                    }
                }
                
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#slider-onShowing" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#slider-onShowing" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    </section>
    <!-- ON SHOWING FILMS -->
    

    <br>
    <hr style="border-top: 5px solid red;">
    <br>

    <!-- NOT SHOWING FILMS -->
    <section class="notShowing">
        <div class="container">
            <div class="row">
                <h2>Not Showing</h2>
            </div>
        </div>

        <div class="container">

         <div id="slider-notShowing" class="carousel slide carousel-fade my-3" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @for (int i = 0; i < @Model.notShowingMovies.Count; i++)
                {
                    @if (i == 0)
                    {
                        <button type="button" data-bs-target="#slider-notShowing" data-bs-slide-to="@i" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                    }
                    else
                    {
                        <button type="button" data-bs-target="#slider-notShowing" data-bs-slide-to="@i"
                    aria-label="Slide 2"></button>
                    }

                }
                
            </div> 
            <div class="carousel-inner" >

                @for (int i = 0; i < @Model.notShowingMovies.Count; i++)
                {
                    @if (i == 0)
                    {
                        <div class="carousel-item active">
                            <a asp asp-controller="MainPage" asp-action="MoviePage" asp-route-id="@Model.notShowingMovies[i].movieId">
                                <img class="d-block  w-100 img-fluid" src="@Model.notShowingMovies[i].moviePosterUrl" alt=""></a>
                            
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <a asp asp-controller="MainPage" asp-action="MoviePage" asp-route-id="@Model.notShowingMovies[i].movieId">
                                <img class="d-block  w-100 img-fluid" src="@Model.notShowingMovies[i].moviePosterUrl" alt=""></a>
                        </div>
                    }
                }
                
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#slider-notShowing" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#slider-notShowing" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        </div>
    </section>
    <!-- NOT SHOWING FILMS -->

    <br>
    <hr style="border-top: 5px solid red;">
    <br>

    @await Html.PartialAsync("_footer")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>