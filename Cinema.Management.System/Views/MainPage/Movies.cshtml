@model List<Movie>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>

    @await Html.PartialAsync("_navbar")


    <!-- FILM INFO ONE BY ONE -->
    <section class="filmInfo mt-5">
        
        <div id="outerContainer" class="container">
            <h2 class="fw-bold text-capitalize bg-white">All Films</h2>
            <br>
            <hr style="border: 2px solid black;">
            <br>

            @foreach (Movie movie in Model)
            {
                <div class="container">
                    <!-- ROW 3'E BÖLÜNÜYOR (POSTER NAME AND TIME) -->
                    <div class="row">
                        <!-- PHOTO -->
                        <div class="col-3 ">
                            <div class="container">
                                <a href=""><img class="img-fluid" src="@movie.moviePosterUrl" alt=""> </a>
                            </div>
                        </div>

                        <!-- NAME AND TYPE -->
                        <div class="col-6">
                            <!-- NAME AND ITS LINK -->
                            <div class="container">
                                <p><a class="text-decoration-none fw-bold text-capitalize link-dark"
                                    href="">@movie.movieName</a></p>
                                <br>

                                @if (@movie.isShowing)
                                {
                                    <p><strong>On Showing!</strong></p>
                                    <br>
                                }


                                <p><strong>Type: </strong>Action</p>
                            </div>

                        </div>

                        <div class="col-3">
                            <div class="container">
                                <p><strong>Duration: </strong>@movie.movieDuration minutes</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <br>
                <hr style="border: 2px solid black;">
                <br>
            }
        </div>

    </section>
    <!-- FILM INFO ONE BY ONE -->


    @await Html.PartialAsync("_footer")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>