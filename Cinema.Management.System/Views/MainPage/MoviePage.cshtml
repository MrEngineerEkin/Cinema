    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <style>
        #background {
            background-image: url(https://www.arttablo.com/upload/U-sinema-salonu-fotograf-kanvas-tablo1461331435-800.jpg);
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>

</head>

<body>

    @await Html.PartialAsync("_navbar")

    <!-- PARTIAL VIEW ILE YAPARSAK -->
    <!--<partial name="_navbar" /> -->

    <h2 class="fw-bold text-capitalize text-center bg-white mt-5"><strong>@Model.movieName</strong></h2>
    <!-- AFİŞ VE FRAGMAN -->
    <!-- ROW 2 COLUMN'A BÖLÜNÜYOR -->
    <div class="row mt-5" id="background">

        <!-- FOTO BÖLÜMÜ -->
        <div class="col-md-5 col-lg-4 col-xl-3 mx-auto my-4 text-center ">
            <img class="ms-5 border border-5 rounded img-fluid" src=@Model.moviePhotoUrl alt="" width="255px">
        </div>

        <!-- FRAGMAN BÖLÜMÜ -->
        <!-- RESPONSIVE YAPAMADIM FRAGMANI,çok az bi OVERFLOW OLUYO EKRANI KÜÇÜLTÜNCE -->
        <div class="col-md-7 col-lg-8 col-xl-9 mx-auto my-auto text-center ">
            <iframe class="border border-5 rounded" width="560" height="315" src=@Model.movieTrailerUrl
                title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
        </div>
    </div>
    <!-- ROW 2 COLUMN'A BÖLÜNÜYOR -->
    <!-- AFİŞ VE FRAGMAN -->
    <!-- FİLM INFO -->
    <section class="filmInfo mt-5">
        <div class="container">
            <h2 class="text-center">@Model.movieName</h2>
            <p> <strong>Director: </strong> @Model.movieDirector.directorFirstName
                @Model.movieDirector.directorLastName</p>
            <p>
                <strong>Cast: </strong>

            </p>
            <div class="row">
                <div class="col-3">
                    <div><strong>Release Date:</strong> @Model.movieReleaseDate</div>
                    <div><strong>Duration:</strong> @Model.movieDuration Minutes</div>
                    <div><strong>Category:</strong> @Model.movieCategory</div>


                </div>
                <div class="col-9">
                    <div>
                        <strong>Summary: </strong>@Model.movieSummary
                    </div>
                </div>
            </div>
        </div>
    </section>

    <br><br>
    <hr style="border: 3px solid black;">
    <br><br>

    <!-- FİLM VİZYONDAYSA BİLET AL -->
    <!--
        <a asp-controller="Home"  asp-action="Register">
