@model Cinema.Management.System.ViewModels.ProfileViewModel


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>

    @await Html.PartialAsync("_navbar")

    <div class="container mt-5">
        <h2>Welcome @Model.customer.firstName @Model.customer.lastName !</h2>
        <p class="fw-bold">CUSTOMER INFO: </p>
        <p>Customer Email: @Model.customer.email</p>
        <p>Customer BirthDate: @Model.customer.birthDate</p>
        <p>Customer Phone: @Model.customer.phone</p>
    </div>

    @if (Model.watchedMovies.Count() != 0)
    {
        <div class="container">
            <h2 class="fw-bold">Watch List:</h2>
            <ul >
                @foreach (Movie mov in Model.watchedMovies)
                {
                    <li style="list-style: none;">
                        <div class="card" style="width: 10rem;">
                            <img id="bottomImg" class="card-img-top" src="@mov.moviePhotoUrl" alt="">
                            <div class="card-body">
                                <p class="card-title fs-5">@mov.movieName</p>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    }
    else
    {
        <div class="container">
            <h2>You Haven't Add Any Film To Your Watchlist!</h2>
        </div>
    }




    @await Html.PartialAsync("_footer")


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>