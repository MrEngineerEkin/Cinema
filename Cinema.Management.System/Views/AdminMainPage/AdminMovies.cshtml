@model List<Movie>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
    @await Html.PartialAsync("_admNavbar")

    <div class="row">
    <div class="col-md-12">
        <h1 class="h3">All Films</h1>
        <hr>
       <a class="btn-lg btn-dark mb-4" style="text-decoration: none;" asp asp-controller="AdminMainPage" asp-action="AdminAddMovie">Add Movie</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 100px;">Photo</td>
                    <td>Name</td>
                    <td style="width: 20px;">Duration</td>
                    <td style="width: 20px;">Category</td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count > 0)
                {
                       @foreach (Movie mov in Model)
                        {
                            <tr>
                                <td>@mov.movieId</td>
                                <td><img src="@mov.moviePhotoUrl" width="80"></td>
                                <td>@mov.movieName</td>
                                <td>@mov.movieDuration</td>
                                <td>@mov.movieCategory</td>

                                <td>
                                    <a class="btn btn-primary btn-sm mr-2" asp asp-controller="AdminMainPage" 
                                    asp-action="AdminMoviePage" asp-route-id="@mov.movieId">Edit</a>

                                    
                                    <form action="/AdminMainPage/DeleteMovie" method="POST" style="display: inline;">
                                        <input type="hidden" name="productId" value="@mov.movieId">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                    @* <form action="/AdminMainPage/AddActor" method="POST" style="display: inline;">
                                        <input type="hidden" name="id" value="@mov.movieId">
                                        <button type="submit" class="btn btn-danger btn-sm">Add Actor</button>
                                    </form> *@
                                    <a class="btn btn-primary btn-sm mr-2" asp asp-controller="AdminMainPage" asp-action="AddActor" asp-route-id="@mov.movieId">
                                        Add Actor </a>
                                </td>
                        </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>No Movies</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

    @await Html.PartialAsync("_footer")


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>