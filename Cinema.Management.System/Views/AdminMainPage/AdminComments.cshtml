@model List<Comment>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
    @await Html.PartialAsync("_admNavbar")

    <div class="row">
    <div class="col-md-12">
        <h1 class="h3">All Comments</h1>
        <hr>
        
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">CommentId</td>
                    <td style="width: 60px;">MovieName</td>
                    <td style="width: 40px;">User Firstname</td>
                    <td style="width: 40px;">User Lastname</td>
                    <td style="width: 500px;">Comment</td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count > 0)
                {
                       @foreach (Comment com in Model)
                        {
                            <tr>
                                <td>@com.commentId</td>
                                <td>@com.movieName</td>
                                <td>@com.userFirstName</td>
                                <td>@com.userLastName</td>
                                <td>@com.commentContent</td>

                                <td>
                                    <form action="/AdminMainPage/AdminComments" method="POST" style="display: inline;">
                                        <input type="hidden" name="commentId" value="@com.commentId">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                        </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>No Comments</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

    @await Html.PartialAsync("_footer")


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>