@model Movie


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
    <style>
        #background {
            background-image: url(https://www.arttablo.com/upload/U-sinema-salonu-fotograf-kanvas-tablo1461331435-800.jpg);
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>

</head>

<body>

    @await Html.PartialAsync("_admNavbar")


    <h2><strong>Edit: </strong> @Model.movieName</h2>

    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form method="POST" action="/AdminMainPage/AdminMoviePage">
                
                <input name="MovieId" action="/AdminMainPage/AdminMoviePage" class="form-control" type="number"
                    placeholder="MovieId" value="@Model.movieId" hidden/>
                <br>
                <label for="MovieName">Movie Name</label>
                <input name="MovieName" action="/AdminMainPage/AdminMoviePage" class="form-control" type="text"
                    placeholder="MovieName" value="@Model.movieName" required />
                <br>
                <label for="MovieReleaseDate">Movie Release Date</label>
                <input name="MovieReleaseDate" action="/AdminMainPage/AdminMoviePage" class="form-control" type="date"
                    placeholder="MovieReleaseDate" value="@Model.movieReleaseDate" required />
                <br>
                <label for="MovieDuration">Movie Duration</label>
                <input name="MovieDuration" action="/AdminMainPage/AdminMoviePage" class="form-control" type="text"
                    placeholder="MovieDuration" value="@Model.movieDuration" required />
                <br>
                <label for="MovieTrailerUrl">Movie Trailer Url</label>
                <input name="MovieTrailerUrl" action="/AdminMainPage/AdminMoviePage" class="form-control" type="text"
                    placeholder="MovieTrailerUrl" value="@Model.movieTrailerUrl" required />
                <br>
                <label for="MovieSummary">Movie Summary</label>
                <input name="MovieSummary" action="/AdminMainPage/AdminMoviePage" class="form-control" type="textarea"
                    style="resize: none; height: 200px;" placeholder="MovieSummary" class="form-control"
                    maxlength="2000" value="@Model.movieSummary" required />
                <br>
                <!--
                <input name="DirectorFirstName" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="DirectorFirstName" />
                -->

                <!--
                <input name="DirectorLastName" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="DirectorLastName" required />
                -->

                <div class="container">
                    @if (Model.isShowing == true)
                    {
                        <input type="radio" id="showing" name="MovieIsShowing" value="1" checked>
                        <label for="showing">Is Showing</label><br>
                        <input type="radio" id="not showing" name="MovieIsShowing" value="0">
                        <label for="not showing">Not Showing</label><br>
                    }
                    else
                    {
                        <input type="radio" id="showing" name="MovieIsShowing" value="1">
                        <label for="showing">Is Showing</label><br>
                        <input type="radio" id="not showing" name="MovieIsShowing" value="0" checked>
                        <label for="not showing">Not Showing</label><br>
                    }
                </div>
                <br>
                <label for="MoviePhotoUrl">Movie Photo Url</label>
                <input name="MoviePhotoUrl" action="/AdminMainPage/AdminMoviePage" class="form-control" type="text"
                    placeholder="MoviePhotoUrl" value="@Model.moviePhotoUrl" required />
                <br>
                <label for="MoviePosterUrl">Movie Poster Url</label>
                <input name="MoviePosterUrl" action="/AdminMainPage/AdminMoviePage" class="form-control" type="text"
                    placeholder="MoviePosterUrl" value="@Model.moviePosterUrl" required />

                <!-- KATEGORİ DEĞİŞTİRSİN Mİ? -->
                <!--
                <div class="form-group mt-4">


                    <select name="MovieCategory" required class="form-select" id="sessionSelect">
                        <option selected>Category</option>
                @* @foreach (string item in Model)
                    {
                    <option value=@item>@item</option>
                    } *@
                    </select>
                </div>

                -->
                <br>
                <button class="btn btn-primary btn-sm mr-2" type="submit">Edit Movie</button>
            </form>
        </div>
    </div>







    @await Html.PartialAsync("_footer")


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>