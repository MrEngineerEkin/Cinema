@model Cinema.Management.System.ViewModels.sessionViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cinema Halls</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
    @await Html.PartialAsync("_admNavbar")

    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form action="/AdminMainPage/AdminAddSessions">
                <h1>Add Session</h1>
                <div class="form-group mt-4">


                    <select name="cinemaHallId" required class="form-select" id="cinemaHallName">
                        <option selected>CinemaHall Name</option>
                        @foreach (CinemaHall item in Model.cinemaHalls)
                        {
                            <option value=@item.cinemaHallId>@item.cinemaHallName</option>
                        }

                    </select>


                </div>
                <div class="form-group mt-4">


                    <select name="movieId" required class="form-select" id="movieName">
                        <option selected>Movie Name</option>
                        @foreach (Movie item in Model.movies)
                        {
                            <option value=@item.movieId>@item.movieName</option>
                        }

                    </select>


                </div>
                <div class="form-group mt-4">


                    <label for="sessionTime">Choose a time for session:</label>

                    <input type="datetime-local" id="sessionTime" name="sessionTime" value="2022-01-01T00:00"
                        min="2022-01-01T00:00">


                </div>



                <button type="submit">Add Session</button>
            </form>


        </div>

        @if (@TempData["SessionCreateError"]!=null)
    {
        <h6 style="color: red; border: 2px solid red; padding:5px ; border-radius :3px;"><strong>@TempData["SessionCreateError"]</strong></h6>

    }



    </div>



    @await Html.PartialAsync("_footer")


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>