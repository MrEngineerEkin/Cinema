@model List<string>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin New Movie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
    @await Html.PartialAsync("_admNavbar")

    

    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form action="/AdminMainPage/AdminAddMovie">
                <h1>Add Movie</h1>
                <input name="MovieName" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="MovieName" required />
                <input name="MovieReleaseDate" action="/AdminMainPage/AdminAddMovie" class="form-control" type="date"
                    placeholder="MovieReleaseDate" required />
                <input name="MovieDuration" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="MovieDuration" required />

                <input name="MovieTrailerUrl" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="MovieTrailerUrl" required />
                <input name="MovieSummary" action="/AdminMainPage/AdminAddMovie" class="form-control" type="textarea"
                    style="resize: none; height: 200px;" placeholder="MovieSummary" class="form-control"
                    maxlength="2000" required />
                <input name="DirectorFirstName" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="DirectorFirstName" />

                <input name="DirectorLastName" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="DirectorLastName" required />

                <div class="container">
                    <input type="radio" id="showing" name="MovieIsShowing" value="1">
                    <label for="showing">Is Showing</label><br>
                    <input type="radio" id="not showing" name="MovieIsShowing" value="0">
                    <label for="not showing">Not Showing</label><br>
                </div>
                <input name="MoviePhotoUrl" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="MoviePhotoUrl" required />
                <input name="MoviePosterUrl" action="/AdminMainPage/AdminAddMovie" class="form-control" type="text"
                    placeholder="MoviePosterUrl" required />
                
                <div class="form-group mt-4">


                    <select name="MovieCategory" required class="form-select" id="sessionSelect">
                        <option selected>Category</option>
                        @foreach (string item in Model)
                        {
                            <option value=@item>@item</option>
                        }
                        
                    </select>


                </div>

                <button class="btn btn-primary btn-sm mr-2" type="submit">Add Movie</button>
            </form>


        </div>



    </div>



    @await Html.PartialAsync("_footer")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>