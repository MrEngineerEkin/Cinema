@model Cinema.Management.System.ViewModels.MovieCreateViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin New Movie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
    @await Html.PartialAsync("_admNavbar")

    <form method="GET">
        <div class="form-group">
            <label for="@Model.movie.movieName">Movie Name</label>
            <input type="text" asp-for="@Model.movie.movieName" class="form-control">
        </div>

        <div class="form-group">
            <label for="@Model.movie.movieReleaseDate">Movie Release Date</label>
            <input asp-for="@Model.movie.movieReleaseDate" class="form-control">
        </div>

        <div class="form-group">
            <label for="@Model.movie.movieDuration">Movie Duration</label>
            <input asp-for="@Model.movie.movieDuration" class="form-control">
        </div>

        <div class="form-group">
            <label for="@Model.movie.movieTrailerUrl">Movie Trailer Url</label>
            <textarea asp-for="@Model.movie.movieTrailerUrl" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label for="@Model.movie.movieSummary">Movie Summary</label>
            <textarea asp-for="@Model.movie.movieSummary" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label for="@Model.director.directorFirstName">Movie Director Name</label>
            <input asp-for="@Model.director.directorFirstName" class="form-control">
        </div>

        <div class="form-group">
            <label for="@Model.director.directorLastName">Movie Director Surname</label>
            <input asp-for="@Model.director.directorLastName" class="form-control">
        </div>

        <div class="form-group">
            <label for="@Model.movie.isShowing">Is Movie Showing (1 or 0)</label>
            <input asp-for="@Model.movie.isShowing" class="form-control">
        </div>

        <div class="form-group">
            <label for="@Model.movie.moviePhotoUrl">Movie Photo Url</label>
            <textarea asp-for="@Model.movie.moviePhotoUrl" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label for="@Model.movie.moviePosterUrl">Movie Poster Url</label>
            <textarea asp-for="@Model.movie.moviePosterUrl" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label for="@Model.movie.movieCategory">Category Name</label>
            <select asp-for="@Model.movie.movieCategory" class="form-control">
                <option selected disabled>Se√ßiniz</option>
            </select>
        </div>

        <!-- ACTOR EKLEMECE -->

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form action="/AdminMainPage/AdminAddMovie">
                <h1>Sign up</h1>
                <input name="Name" action="/AdminMainPage/AdminAddMovie" type="text" placeholder="Name" required />
                <input name="Surname" action="/AdminMainPage/AdminAddMovie" type="text" placeholder="Surname" required />
                <input name="Email" action="/AdminMainPage/AdminAddMovie" type="email" placeholder="Email" required />
                
                <input name="Password" action="/AdminMainPage/AdminAddMovie" type="password" placeholder="Password" required />
                <input name="Date" action="/AdminMainPage/AdminAddMovie" type="date" placeholder="Birthdate" required />
                <input name="Tel" action="/AdminMainPage/AdminAddMovie" type="text" name="Phone" placeholder="Phone" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" maxlength="10"
                       title="Ten digits code" required /> 
                <button type="submit">Sign Up</button>
            </form>


        </div>

        <div>

        </div>



    </div>



    @await Html.PartialAsync("_footer")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>