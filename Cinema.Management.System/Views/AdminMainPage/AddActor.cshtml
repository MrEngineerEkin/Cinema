@model int

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin New Movie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
    @await Html.PartialAsync("_admNavbar")



    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form action="/AdminMainPage/AddActor/@Model">
                <h1>Add Movie</h1>
                <input name="actorName" action="/AdminMainPage/AddActor/@Model" class="form-control" type="text"
                    placeholder="Actor Name" required />
                <input name="actorSurname" action="/AdminMainPage/AddActor/@Model" class="form-control" type="text"
                    placeholder="Actor Surname" required />
                <div class="form-group mt-4">

                </div>
                <button type="submit">Add Actor</button>
            </form>


        </div>



    </div>



    @await Html.PartialAsync("_footer")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>